{
  "manifest_version": 3,
  "name": "MPC Extension",
  "version": "0.2.0",
  "description": "Extension hỗ trợ sinh viên trường Đại học Mở TP. HCM trong việc lên kế hoạch học tập.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "./src/assets/img/icon16.png",
      "32": "./src/assets/img/icon32.png",
      "48": "./src/assets/img/icon48.png",
      "64": "./src/assets/img/icon64.png",
      "128": "./src/assets/img/icon128.png"
    }
  }
}
